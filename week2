<script>
    function wrapLabels(label, maxLength) {
        if (typeof label !== 'string' || label.length <= maxLength) {
            return label;
        }
        const words = label.split(' ');
        let lines = [];
        let currentLine = '';
        words.forEach(word => {
            if ((currentLine + ' ' + word).trim().length > maxLength) {
                lines.push(currentLine.trim());
                currentLine = word;
            } else {
                currentLine = (currentLine + ' ' + word).trim();
            }
        });
        if (currentLine) {
            lines.push(currentLine.trim());
        }
        return lines;
    }

    const defaultTooltipCallback = {
        plugins: {
            tooltip: {
                callbacks: {
                    title: function(tooltipItems) {
                        const item = tooltipItems[0];
                        let label = item.chart.data.labels[item.dataIndex];
                        if (Array.isArray(label)) {
                          return label.join(' ');
                        }
                        return label;
                    }
                }
            }
        }
    };
    
    const characterTropesCtx = document.getElementById('characterTropesChart');
    if (characterTropesCtx) {
        new Chart(characterTropesCtx, {
            type: 'radar',
            data: {
                labels: ['Agency', 'Strength', 'Action-Oriented', 'Defined by Beauty', 'Passive', 'Needs Rescue'],
                datasets: [{
                    label: 'Heroic Prince',
                    data: [8, 9, 9, 2, 1, 1],
                    fill: true,
                    backgroundColor: 'rgba(255, 107, 107, 0.2)',
                    borderColor: '#FF6B6B',
                    pointBackgroundColor: '#FF6B6B',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: '#FF6B6B'
                }, {
                    label: 'Passive Princess',
                    data: [2, 3, 1, 9, 9, 8],
                    fill: true,
                    backgroundColor: 'rgba(17, 138, 178, 0.2)',
                    borderColor: '#118AB2',
                    pointBackgroundColor: '#118AB2',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: '#118AB2'
                }]
            },
            options: {
                maintainAspectRatio: false,
                 ...defaultTooltipCallback,
                scales: {
                    r: {
                        angleLines: { color: '#e2e8f0' },
                        grid: { color: '#e2e8f0' },
                        pointLabels: { font: { size: 14 }, color: '#073B4C' },
                        ticks: {
                            backdropColor: 'rgba(255, 255, 255, 0.75)',
                            color: '#4a5568',
                            stepSize: 2
                        },
                         suggestedMin: 0,
                         suggestedMax: 10
                    }
                }
            }
        });
    }

    const narrativeEvolutionCtx = document.getElementById('narrativeEvolutionChart');
    if (narrativeEvolutionCtx) {
        const rawLabels = [
            'Snow White (1937)', 
            'Cinderella (1950)', 
            'Sleeping Beauty (1959)', 
            'The Little Mermaid (1989)',
            'Beauty and the Beast (1991)',
            'Mulan (1998)',
            'Tangled (2010)',
            'Brave (2012)',
            'Frozen (2013)',
            'Moana (2016)'
        ];

        new Chart(narrativeEvolutionCtx, {
            type: 'line',
            data: {
                labels: rawLabels.map(label => wrapLabels(label, 16)),
                datasets: [{
                    label: 'Female Agency',
                    data: [1, 2, 1, 5, 6, 8, 7, 9, 8, 10],
                    borderColor: '#06D6A0',
                    backgroundColor: 'rgba(6, 214, 160, 0.1)',
                    fill: true,
                    tension: 0.3,
                },
                {
                    label: 'Damsel in Distress',
                    data: [10, 9, 10, 6, 4, 2, 4, 1, 2, 1],
                    borderColor: '#FF6B6B',
                    backgroundColor: 'rgba(255, 107, 107, 0.1)',
                    fill: true,
                    tension: 0.3,
                }]
            },
            options: {
                maintainAspectRatio: false,
                ...defaultTooltipCallback,
                scales: {
                    y: {
                        beginAtZero: true,
                        suggestedMax: 10,
                        grid: {
                            color: '#e2e8f0'
                        },
                        ticks: {
                           color: '#4a5568'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        },
                        ticks: {
                           color: '#4a5568'
                        }
                    }
                }
            }
        });
    }
</script>
